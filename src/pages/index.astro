---
import BaseLayout from '../layouts/BaseLayout.astro';
// Redirect to docs if we add auth check here; for now just show landing
const user = Astro.locals.user ?? null;
---
<BaseLayout title="Internal Docs" showNav={true} user={user}>
  <div class="mx-auto max-w-5xl">
  <div class="rounded-lg border border-slate-200 bg-white p-8 shadow-sm dark:border-slate-600 dark:bg-slate-800">
    <h1 class="text-2xl font-bold text-slate-900 dark:text-slate-100">Internal Documentation</h1>
    <p class="mt-2 text-slate-600 dark:text-slate-400">
      Internal-only docs. Sign in with an access code to view documentation.
    </p>
    <div class="mt-6 flex gap-4">
      {user ? (
        <a
          href="/docs"
          class="rounded bg-slate-800 px-4 py-2 text-white hover:bg-slate-700 dark:bg-slate-600 dark:hover:bg-slate-500"
        >
          Go to Docs
        </a>
      ) : (
        <a
          href="/login"
          class="rounded bg-slate-800 px-4 py-2 text-white hover:bg-slate-700 dark:bg-slate-600 dark:hover:bg-slate-500"
        >
          Login with access code
        </a>
      )}
    </div>
  </div>
  </div>
</BaseLayout>
